{
  "name": "mockttp",
  "version": "0.4.0",
  "description": "Mock HTTP server for testing HTTP clients and stubbing webservices",
  "main": "dist/main.js",
  "browser": "dist/main-browser.js",
  "types": "dist/main.d.ts",
  "bin": {
    "mockttp": "./dist/standalone/standalone-bin.js"
  },
  "files": [
    "dist",
    "src",
    "custom-typings"
  ],
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "tsc && cp src/standalone/schema.gql dist/standalone/schema.gql",
    "test": "npm run build && npm run test:mocha && npm run test:browser",
    "test:mocha": "NODE_EXTRA_CA_CERTS=./test/fixtures/test-ca.pem mocha -r ts-node/register 'test/**/*.spec.ts'",
    "test:browser": "ts-node ./src/standalone/standalone-bin.ts -c karma start",
    "standalone": "npm run build && node -e 'require(\".\").getStandalone({ debug: true }).start()'",
    "graphiql": "npm run build && node ./standalone-graphiql.js",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pimterry/mockttp.git"
  },
  "keywords": [
    "testing",
    "test",
    "mock",
    "mockttp",
    "stub",
    "fake",
    "http",
    "server"
  ],
  "author": "Tim Perry <pimterry@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pimterry/mockttp/issues"
  },
  "homepage": "https://github.com/pimterry/mockttp#readme",
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/cors": "^2.8.1",
    "@types/es6-promise": "0.0.32",
    "@types/express": "^4.0.33",
    "@types/graphql": "^0.10.2",
    "@types/lodash": "^4.14.37",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "@types/normalize-url": "^1.9.1",
    "@types/request": "0.0.31",
    "@types/sinon": "^1.16.31",
    "@types/sinon-chai": "^2.7.27",
    "@types/url-search-params": "^0.10.0",
    "@types/uuid": "^3.4.0",
    "@types/zen-observable": "^0.5.3",
    "apollo-link": "^1.0.5",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-fetch": "^0.2.0",
    "http-proxy-agent": "^2.0.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.5",
    "mocha": "^3.0.2",
    "opn": "^5.1.0",
    "request": "^2.75.0",
    "request-promise-native": "^1.0.3",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "tmp-promise": "^1.0.3",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2",
    "url-search-params": "^0.10.0",
    "webpack": "^3.7.1"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "apollo-server-express": "^1.1.0",
    "body-parser": "^1.15.2",
    "cors": "^2.8.4",
    "express": "^4.14.0",
    "fetch-ponyfill": "^4.1.0",
    "graphql": "^0.11.3",
    "graphql-tools": "^2.11.0",
    "lodash": "^4.16.4",
    "node-forge": "^0.7.1",
    "normalize-url": "^1.9.1",
    "portfinder": "^1.0.9",
    "typed-error": "^2.0.0",
    "uuid": "^3.1.0"
  }
}
